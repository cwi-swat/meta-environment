module Expressions

imports BasicNotions

  exports
    sorts Exp 
    context-free syntax
      Nat         -> Exp 
      Id          -> Exp 
      Exp "+" Exp -> Exp {left}
      Exp "-" Exp -> Exp {left}
      Exp "*" Exp -> Exp {left}

  context-free priorities
    Exp "*" Exp -> Exp > {left: Exp "+" Exp -> Exp
                                Exp "-" Exp -> Exp}