module Expressions

imports BasicNotions

  exports
    sorts Exp 
    context-free syntax
      Nat         -> Exp 
      Id          -> Exp 
      Exp "+" Exp -> Exp {left}
      Exp "-" Exp -> Exp {left}
      Exp "*" Exp -> Exp {left}

  variables
    "Exp"[0-9\']* -> Exp 

  context-free priorities
    Exp "*" Exp -> Exp > {left: Exp "+" Exp -> Exp
                                Exp "-" Exp -> Exp}