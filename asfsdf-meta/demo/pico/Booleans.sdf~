module Booleans

imports Layout

exports
  sorts BOOL-CON BOOL
  context-free syntax
    "true"  -> BOOL-CON
    "false" -> BOOL-CON

  context-free syntax
    BOOL-CON           -> BOOL
    BOOL "|" BOOL      -> BOOL {left}
    BOOL "&" BOOL      -> BOOL 
    "not" "(" BOOL ")" -> BOOL
    "(" BOOL ")"       -> BOOL {bracket}
  variables
    "BoolCon"[0-9]* -> BOOL-CON
    "Bool"[0-9]*    -> BOOL
 
  context-free priorities
    BOOL "&" BOOL -> BOOL >
    BOOL "|" BOOL -> BOOL
