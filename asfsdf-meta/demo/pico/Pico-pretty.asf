[pp-program-1]
begin Decls Statement* end = 
   box2program(V ["begin" 
                     I [decls2box(Decls)]
                     I [statementlist2box(Statement*)]
                     "end"])

[pp-decls] 
declare IdType* ; = 
box2decls(V ["declare" I [H hs=0 [idtypelist2box(IdType*) ";"]]])

[list]
IdType , IdType+ = 
box2idtypelist(V [H hs=0 [idtype2box(IdType) ","] idtypelist2box(IdType+)])

