module Bool-example

imports basic/Whitespace

exports
  sorts BOOL 

  context-free syntax
    "true"             -> BOOL
    "false"            -> BOOL 
    BOOL "|" BOOL      -> BOOL {left}
    BOOL "&" BOOL      -> BOOL {left}
    "not" "(" BOOL ")" -> BOOL
    "(" BOOL ")"       -> BOOL {bracket}

  context-free priorities
    BOOL "&" BOOL -> BOOL >
    BOOL "|" BOOL -> BOOL

hiddens
  variables
    "Bool"[0-9\']* -> BOOL
