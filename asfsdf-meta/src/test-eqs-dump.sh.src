#! /bin/sh

MODULENAME=""
OUTPUTFILE=""
VIEWER=""

me=`basename $0`
myversion=`echo $Revision| cut -d' ' -f2`
myarguments="hm:o:V"
options="viewer"

Usage() {
cat << E_O_USAGE >&2
Usage: $myname [options]
Options:
    -V                   reveal program version (i.e. $myversion)
    -m <modulename>      open module <modulename>
    --viewer             start with ToolBus viewer
E_O_USAGE
}

Version() {
    echo "$me v$myversion" >&2
}

# getopt handles command line...
args=`getopt --options $myarguments --longoptions $options -- $* 2> /dev/null`
if test $? != 0
then
        Usage
        exit 2
fi
set -- $args

# Argument interpretation...
while [ $#  -gt 0 ]
do
    case "$1"
    in
        -h)
            Usage ; exit 0 ;;
        -m)
	    shift;
            MODULENAME=$1 ;;
        --viewer)
	    VIEWER="-viewer" ;;
        -V)
            Version ; exit 0 ;;
        --)
           ;;
    # Add additional command line options here...
    *)
            Files="$Files $1" ;;
    esac
    shift
done

if [ "a${MODULENAME}" == "a" ]; then
  echo "Please provide a module name"
  Usage
  exit 1
fi

__TOOLBUS__/bin/toolbus \
  ${VIEWER} \
  -DMODULENAME=\\\"${MODULENAME}\\\" \
  __TBSCRIPTS__ \
  __PREFIX__/share/asfsdf-meta/start-test-eqs-dump.tb $*
