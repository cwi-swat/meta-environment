prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@

USAGE="Usage: `basename $0` msm-paths-file module"

if test "x$1" = "x-h"
then
  echo $USAGE
  exit 0
fi

IMPORTS="${bindir}/imports -lr"

case $#
in
	2)
		msm=$1
		module=$2;
		;'
	*)
		echo $USAGE
		exit 1;;
esac

modules=`$IMPORTS $msm $module`;

if [ -z "$modules" ] ; then
	exit 1;
fi

echo "definition"
echo

for file in $modules
do
	dir=`dirname $file`
	syn=`basename $file .asfix`
	file=$dir/$syn.syn
	if [ -f $file ]
	then
		echo module $syn
		sed 's/^/  /' < $file
		echo ""
	else
		echo "File $file does not exist!"		>& 2
	fi
done
