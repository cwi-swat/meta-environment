# $Id$
# Directory: sglr/src

# Configure variable substitutions
PRODUCT		= @PRODUCT@
VERSION		= @VERSION@
DATE            = `date`

@SET_MAKE@

VPATH		= @srcdir@
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= $(exec_prefix)/bin
libdir		= $(exec_prefix)/lib
includedir	= $(prefix)/include
docdir		= $(top_srcdir)/docs

SHELL		= @SHELL@

AR              = @AR@
AR_FLAGS        = cr

CC		= @CC@
CFLAGS		= @CFLAGS@ ${XCFLAGS}
CFLAGSPROF	= -pg ${CFLAGS}
CPP		= @CPP@
CPPFLAGS	= @CPP@ ${XCPPFLAGS}
LDFLAGS         = -g
LDFLAGSPROF     = ${LDFLAGS} -pg

MAKE		= gmake

DEFS		= @DEFS@ ${XDEFS}
INCLUDES	= @INCLUDES@ ${XINCLUDES}
LIBS		= @LIBS@ ${SOCKLIBS} ${XLIBS}
LIBSPROF	= @LIBS@ ${SOCKLIBS} ${XLIBSPROF}
SOCKLIBS	= @SOCKLIBS@

INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
INSTALL_PROG	= @INSTALL_PROG@
UNINSTALL	= @UNINSTALL@

ATERM           = @ATERM@
TOOLBUS         = @TOOLBUS@

# The eXtra parts of some variables
XCFLAGS		= # -DHAVE_BOEHMGC
# BOEHMGC         = -lgc
XCPPFLAGS	=
XINCLUDES	= -I$(ATERM)/include
XLIBSALL	= -L. -L${libdir} -lsglr -la2toa1 ${BOEHMGC}
XLIBS		= ${XLIBSALL} -lATerm-${CC} -lAsFix-${CC} -lATB-${CC}
XLIBSPROF	= ${XLIBSALL} -lATerm-prof  -lAsFix-prof  -lATB-prof

SGLRLIB         = libsglr.a
SGLRLIBPROF     = libsglr-prof.a
SGLRLIBS        = ${SGLRLIB} ${SGLRLIBPROF}
SGLRINC         = sglr.h
LIBSRC          = sglr-interface.c parse-table.c parser.c forest.c stack.c tree-to-dot.c
LIBOBJ          = $(patsubst %.c,%.o,$(LIBSRC))
LIBOBJPROF      = $(patsubst %.c,%-prof.o,$(LIBSRC))

PROGS           = sglr
GETOPTC         = getopt.c getopt1.c
GETOPTOBJ       = $(patsubst %.c,%.o,$(GETOPTC))
CSRC            = sglr-main.c
OBJ             = $(patsubst %.c,%.o,$(CSRC))

all:	${SGLRLIBS} ${PROGS}

install:	incinstall libinstall bininstall

incinstall:	${SGLRINC}
	@for INC in $(SGLRINC);	\
	do \
		$(INSTALL_DATA) $(INSTALL) $(includedir) $$INC; \
	done

libinstall:	${SGLRLIBS}
	@for LIB in $(SGLRLIBS);	\
	do \
		$(INSTALL_DATA) $(INSTALL) $(libdir) $$LIB; \
	done

bininstall:	${PROGS}
	@for PROG in $(PROGS);	\
	do \
		$(INSTALL_PROG) $(INSTALL) $(bindir) $$PROG; \
	done

distclean realclean:	clean
	rm -f	${SGLRLIBS} ${PROGS} Makefile

clean:
	rm -f	core sglr.tifs sglr.tif.[ch] ${OBJ} ${GETOPTOBJ} \
		${LIBOBJ} ${LIBOBJPROF}

# Generic rules

%.c:	%.h

%-prof.o:	%.c
	$(CC) $(CFLAGSPROF) $(INCLUDES) -c $< -o $@

%.o:	%.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $<

%.tif.c: %.tifs
	$(prefix)/bin/tifstoc -tool $* $<

%.tifs: %.tb
	$(prefix)/bin/toolbus -gentifs $<


# Specific dependencies

libsglr-prof.a:  ${LIBOBJPROF}
	$(AR) $(AR_FLAGS) $@ $(LIBOBJPROF)

sglr-prof: ${GETOPTOBJ} ${OBJ} ${SGLRLIBPROF}
	${CC} ${LDFLAGSPROF} ${OBJ} ${GETOPTOBJ} $(LIBSPROF) -o $@

libsglr.a:  ${LIBOBJ}
	$(AR) $(AR_FLAGS) $@ $(LIBOBJ)

sglr: ${GETOPTOBJ} ${OBJ} ${SGLRLIBS}
	${CC} ${LDFLAGS} ${OBJ} ${GETOPTOBJ} $(LIBS) -o $@

sglr-main.o:	sglr.tif.c

parse-table.o: parse-table.h


# The GNU getopt sources $(GETOPTC) don't compile silently

getopt.o: getopt.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< 2> /dev/null

getopt1.o: getopt1.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< 2> /dev/null
