# $Id$

# Configure variable substitutions
PRODUCT		= @PRODUCT@
VERSION		= @VERSION@

@SET_MAKE@
VPATH		= @srcdir@
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= ${exec_prefix}/bin
libdir		= ${exec_prefix}/lib
includedir	= ${prefix}/include
docdir		= ${top_srcdir}/docs

SHELL		= @SHELL@

AR              = @AR@
AR_FLAGS        = cr

CC		= @CC@
CFLAGS		= @CFLAGS@ ${XCFLAGS}
CFLAGSPROF	= -pg ${CFLAGS}
CPP		= @CPP@
CPPFLAGS	= @CPP@ ${XCPPFLAGS}
LDFLAGS         = -g
LDFLAGSPROF     = ${LDFLAGS} -pg

MAKE		= gmake

DEFS		= @DEFS@
INCLUDES	= @INCLUDES@ ${XINCLUDES}
LIBS		= ${XLIBS} @LIBS@ ${SOCKLIBS}
SOCKLIBS	= @SOCKLIBS@

INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
INSTALL_PROG	= @INSTALL_PROG@
UNINSTALL	= @UNINSTALL@

ATERM           = @ATERM@
TOOLBUS         = @TOOLBUS@

XCFLAGS		= ${DEFS}
XINCLUDES	= -I${ATERM}/include
ATLIBS		= -lATerm -lAsFix -lATB
XLIBS		=  -L${libdir} ${addsuffix -${CC},${ATLIBS}}

PROG		= parse-client
SRC		= ${addsuffix .c,${PROG}}
OBJ		= ${addsuffix .o,${PROG}}
TIFS		= ${addsuffix .tif.c,${PROG}}

BINFILES	= ${PROG}
INCLUDEFILES	= 
LIBFILES	= 

all:	${BINFILES}

libs:	${LIBFILES}

.SILENT:	depend

install:	all
	@$(INSTALL_PROG) $(INSTALL) $(bindir) $(BINFILES)
	@$(INSTALL_DATA) $(INSTALL) $(libdir) $(LIBFILES)
	@$(INSTALL_DATA) $(INSTALL) $(includedir) $(INCLUDEFILES)

uninstall:	
	@$(UNINSTALL) $(bindir) $(BINFILES)
	@$(UNINSTALL) $(libdir) $(LIBFILES)
	@$(UNINSTALL) $(includedir) $(INCLUDEFILES)


distclean realclean spotless:	clean
	rm -f	${PROG}.tifs ${PROG}.tif.[ch] depend Makefile

clean:
	rm -f	core ${PROG} ${OBJ}

# Generic rules

%.tif.c: %.tifs
	${prefix}/bin/tifstoc -tool $* $<

%.tifs: %.tb
	${prefix}/bin/toolbus -gentifs $<


# Specific ones

parse-client:	${SRC} ${TIFS}
	${CC} ${CFLAGS} ${INCLUDES} $< ${LIBS} -o $@


# ObTribute to Larry Wall
love:
	@echo "not war"


# Handle dependencies
depend: ${SRC} ${TIFS}
	makedepend ${INCLUDES} ${SRC}	 -f- | 	\
		sed -e "s/^${patsubst %.c,%.o,${SRC}}:/${PROG}:/"	> $@

-include depend
