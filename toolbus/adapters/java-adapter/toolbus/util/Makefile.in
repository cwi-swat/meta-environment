# The following variables are instantiated using the configure script
# generated by autoconf:

PRODUCT		= @PRODUCT@
VERSION		= @VERSION@

srcdir		= @srcdir@
VPATH		= @srcdir@
top_srcdir      = @top_srcdir@

prefix          = @prefix@
exec_prefix     = @exec_prefix@
bindir          = $(exec_prefix)/bin
libdir          = $(exec_prefix)/lib
docdir		= $(top_srcdir)/doc
includedir      = $(prefix)/include
classdir	= @classdir@

SHELL		= /bin/sh

INSTALL		= @INSTALL@
CLEAN		= @CLEAN@
NOWEB		= @NOWEB@

DISTFILES	= Makefile.in $(SOURCE)
INSTALLDIR	= ${top_srcdir}/../${PRODUCT}-${VERSION}/adapters/java-adapter
COMPONENT	= toolbus/util

SOURCE		= $(JDK11SOURCE) SimpleHashtable.java \
		SimpleHashtableEntry.java FancyPanel.java
JDK11SOURCE	= Writer.java PrintWriter.java CharArrayWriter.java
CLASSES		= $(JDK11CLASSES) SimpleHashtable.class \
		SimpleHashtableEntry.class SimpleHashtableEnumerator.class \
		FancyPanel.class
JDK11CLASSES	= Writer.class PrintWriter.class CharArrayWriter.class

all:	${CLASSES}

%.class: %.java
	javac -classpath ../..:$$CLASSPATH $<

# The rules below this line are general rules and are based on the
# defines listed above. You probably won't have to change them.

clean:
	${CLEAN} ${CLASSES}

distclean: clean
	${CLEAN}

dist: $(DISTFILES)
	@for file in $(DISTFILES); do \
	  ln $(srcdir)/$$file ${INSTALLDIR}/$(COMPONENT) 2> /dev/null \
	  || cp $(srcdir)/$$file ${INSTALLDIR}/$(COMPONENT); \
	done

install: $(CLASSES)
	-mkdir $(classdir)/$(COMPONENT)
	for file in $(CLASSES); do\
	  $(INSTALL) $$file $(classdir)/$(COMPONENT); \
	done

doc:

uninstall:
	for file in $(CLASSES); do\
	  rm -f $(classdir)/$(COMPONENT)/$$file;\
	done 

