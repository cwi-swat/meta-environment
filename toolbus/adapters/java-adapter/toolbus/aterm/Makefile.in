# The following variables are instantiated using the configure script
# generated by autoconf:

PRODUCT		= @PRODUCT@
VERSION		= @VERSION@

srcdir		= @srcdir@
VPATH		= @srcdir@
top_srcdir      = @top_srcdir@

prefix          = @prefix@
exec_prefix     = @exec_prefix@
bindir          = $(exec_prefix)/bin
libdir          = $(exec_prefix)/lib
docdir		= $(top_srcdir)/doc
includedir      = $(prefix)/include
classdir	= @classdir@

SHELL		= /bin/sh

INSTALL		= @INSTALL@
CLEAN		= @CLEAN@
NOWEB		= @NOWEB@

DISTFILES	= Makefile.in aterm-size $(SOURCE)
INSTALLDIR	= ${top_srcdir}/../${PRODUCT}-${VERSION}/adapters/java-adapter
COMPONENT	= toolbus/aterm

SOURCE		= ATerm.java ATerms.java ATermAppl.java ATermInt.java \
		ATermList.java ATermPlaceholder.java ATermReal.java \
		ATermRef.java ATermsRef.java ATermApplRef.java \
		ATermIntRef.java ATermListRef.java ATermPlaceholderRef.java \
		ATermRealRef.java ATermChannel.java ATermParser.java \
		ATermPattern.java IllegalPlaceholder.java ParseError.java \
		ATermSize.java ATest.java
CLASSES		= ATerm.class ATerms.class ATermAppl.class ATermInt.class \
		ATermList.class ATermPlaceholder.class ATermReal.class \
		ATermRef.class ATermsRef.class ATermApplRef.class \
		ATermIntRef.class ATermListRef.class ATermPlaceholderRef.class\
		ATermRealRef.class ATermChannel.class ATermParser.class \
		ATermPattern.class IllegalPlaceholder.class ParseError.class \
		ATermSize.class ATest.class
PROGRAMS	= aterm-size

all:	${CLASSES}

%.class: %.java
	javac -classpath $$CLASSPATH:../.. $<

# The rules below this line are general rules and are based on the
# defines listed above. You probably won't have to change them.

clean:
	${CLEAN} ${CLASSES}

distclean: clean
	${CLEAN} Makefile.in

dist: $(DISTFILES)
	@for file in $(DISTFILES); do \
	  ln $(srcdir)/$$file ${INSTALLDIR}/${COMPONENT} 2> /dev/null \
	  || cp $(srcdir)/$$file ${INSTALLDIR}/${COMPONENT}; \
	done

install: $(PROGRAMS) $(CLASSES)
	for file in $(PROGRAMS); do\
	  $(INSTALL) $$file $(bindir); \
	done
	for file in $(CLASSES); do\
	  $(INSTALL) $$file $(classdir)/$(COMPONENT); \
	done

doc:

uninstall:
	for file in $(PROGRAMS); do\
	  rm -f $(bindir)/$$file; \
	done
	for file in $(CLASSES); do\
	  rm -f $(classdir)/$(COMPONENT)/$$file;\
	done 

