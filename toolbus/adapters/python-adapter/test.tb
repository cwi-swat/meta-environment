
process TEST is
let
  P : p,
  T : term
in
  execute(p, P?) .
  ( snd-do(P, doit(abc)) delay(sec(3)) .
    snd-eval(P, evalit(["rst", "uvw"])) .
    rec-value(P, evalit(T?)) .
    printf("Received %t from tool P\n", T)
  ) * delta
endlet

tool p is { command = "python-adapter -script pabc.py -script-args x y z" }

toolbus(TEST)
