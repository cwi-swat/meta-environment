# @configure_input@
# directory: tbviz/spec

PRODUCT 	= @PRODUCT@
VERSION 	= @VERSION@

SHELL		= /bin/sh
srcdir		= @srcdir@
VPATH		= @srcdir@
top_srcdir	= @top_srcdir@

CLEAN           = @CLEAN@

@SET_MAKE@
prefix 		= @prefix@
exec_prefix 	= @exec_prefix@
bindir 		= $(exec_prefix)/bin
specdir         = $(exec_prefix)/spec

DISTFILES	= Makefile.in
SUBDIRS         = dot toolbus tbviz

all clean distclean install uninstall:
	@SUBDIRS="${SUBDIRS}";\
	case $@ in \
	  clean) ${CLEAN} ;;\
	  distclean) ${CLEAN} ; rm -f Makefile;;\
	  install) $(top_srcdir)/mkinstalldirs $(specdir)/tbviz $(specdir)/toolbus $(specdir)/dot ;;\
	esac; \
	for SUBDIR in $$SUBDIRS; \
	do \
	  echo Make $@ in $$SUBDIR; \
	  cd $${SUBDIR}; \
	  ${MAKE} $@;  \
	  cd .. ; \
	done

