
PRODUCT		= @PRODUCT@
VERSION		= @VERSION@

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
includedir	= $(prefix)/include

CC		= @CC@
SHELL		= /bin/sh
CFLAGS		= @CFLAGS@
INCLUDES	= @INCLUDES@ -I$(includedir)
LIBS		= @LIBS@ 
TBLIB		= $(libdir)/libtb.a

CLEAN		= @CLEAN@

DISTDIR		= $(top_srcdir)/../$(PRODUCT)-$(VERSION)/demos/$(DIR)

DIR		= swipl-ttt
DISTFILES	= Makefile.in README.txt bke player.tcl ttt.pl ttt.tb \
		verslag.ps

COMPILE = $(CC) $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CFLAGS) $@.c -o $@ $(TBLIB) $(LIBS)

.SUFFIXES:

PROGRAMS	= ttt.pl.o

all:    ${PROGRAMS}

ttt.pl.o: ttt.pl
	swipl -o ttt.pl.o -c ttt.pl

clean:
	${CLEAN} ${PROGRAMS}

distclean: clean
	rm -f Makefile

dist: $(DISTFILES)
	@for file in $(DISTFILES); do \
	  ln $(srcdir)/$$file $(DISTDIR) 2>/dev/null \
	  || cp $(srcdir)/$$file $(DISTDIR); \
	done

