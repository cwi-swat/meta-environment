process A is
  let Tid : perltool, N : int
  in
     execute(perltool, Tid?) .
     snd-do(Tid, print-text("Start\n")) .
     snd-eval(Tid, incr(3)) . rec-value(Tid, N?) .
     snd-do(Tid, print-text(N)) .
     snd-do(Tid, print-text("\nEnd\n")) .
     snd-terminate(Tid, "ready\n")
  endlet

tool perltool is {
     command = "perl-adapter -script exam.perl"
}

toolbus(A)