
AC_INIT
AC_CONFIG_SRCDIR([configure.in])
GLT_INIT_PACKAGE
AC_PREREQ(2.59)

AM_MAINTAINER_MODE

ACLOCAL="${ACLOCAL} -I ."

AC_SET_MAKE
AC_PROG_MAKE_SET([])

AC_PACKAGE_REQUIRE(ruby, ruby,
[  --with-ruby=DIR         Ruby is in  DIR ])
AC_SUBST(RUBY)

AC_PACKAGE_REQUIRE(rubygems, gem,
[  --with-rubygems=DIR     Rubygems is in DIR ])
AC_SUBST(RUBYGEMS)

AC_PACKAGE_REQUIRE(subversion, svn,
[  --with-subversion=DIR   Subversion is in DIR ])
AC_SUBST(SUBVERSION)

AC_PACKAGE_REQUIRE(cvs, cvs,
[  --with-cvs=DIR   CVS is in DIR ])
AC_SUBST(CVS)


AC_PACKAGE_REQUIRE(ssh, ssh,
[  --with-ssh=DIR   ssh is in DIR ])
AC_SUBST(SSH)

AC_CONFIG_FILES([
   Makefile
   src/Makefile
   doc/Makefile
   script/Makefile
])
AC_OUTPUT

