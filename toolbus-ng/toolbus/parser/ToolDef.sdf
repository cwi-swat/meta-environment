module ToolDef
imports TBTerms

exports
  sorts ToolDef Host Kind Command

  context-free syntax
    "tool" Id  "is" "{" Host? Kind? Command? "}"     -> ToolDef {cons("ttt-ToolDef")}
    "kind" "=" String                                -> Kind    {cons("ttt-kind")}
    "host" "=" String                                -> Host    {cons("ttt-host")}
    "command" "=" String                             -> Command {cons("ttt-command")}
