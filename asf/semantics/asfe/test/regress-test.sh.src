toolbus=__TOOLBUS__
datadir=__DATADIR__

tests=0
failed=0

regress_test () {
  eqs=$1
  trm=$2
  ref=$3 
  res=$trm.res 
  tests=`expr $tests + 1`
  rm -f /tmp/$trm.res
  ../src/evaluator -e $eqs -i $trm -o $res
  ./equalModuloWhitespace $ref $res 
  if [ $? != 0 ]; then
    echo "Failed regression test: $eqs" 
    failed=`expr $failed + 1`
  else
    printf .
  fi
}

# Test whether equations are available that *should* be available.
regress_test terms/Traversal-Typecheck.asf.baf terms/Traversal-Typecheck.trm.asfix1  terms/Traversal-Typecheck.ref.asfix1 

echo ""

if [ $failed != 0 ]; then
        echo "FAILED:" $failed "out of" $tests "tests"
        exit 1
else
  echo "All" $tests "tests succeeded"
fi
