@SET_MAKE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@

ATERMLIB    = @ATERMLIB@
ATERMINC    = @ATERMINC@

INCLUDES   = -I$(ATERMINC)
LIBS       = -L$(ATERMLIB) -lAsFix -lATerm -lATB

TESTCASES	= reduce-test prepare-restore-test equalModuloWhitespace-test \
		  whitespace-test
BINS            = prepare-restore equalModuloWhitespace whitespace
OBJS            = preparation.o evaluator.o evaluator.tif.o asfix_utils.o

# CLEANFILES are removed by 'make clean'
CLEANFILES	=  ${BINS} *.o

test: ${TESTCASES} ${BINS}
	@for testcase in ${TESTCASES}; do \
		printf "Running $${testcase}"; \
		sh ./$${testcase}; \
	done 

prepare-restore: prepare-restore.c $(OBJS)
	$(CC) -o prepare-restore $(INCLUDES) $< $(OBJS) $(LIBS)

equalModuloWhitespace: equalModuloWhitespace.c $(OBJS)
	$(CC) -o equalModuloWhitespace $(INCLUDES) $< $(OBJS) $(LIBS)

whitespace: whitespace.c $(OBJS)
	$(CC) -o whitespace $(INCLUDES) $< $(OBJS) $(LIBS)

# Notice that we use a commandline macro to remove the main function
# from evaluator.c
%.o: ../%.c
	$(CC) -c $< $(INCLUDES) -Dmain=move_main_away

clean:
	@rm -f *.o *~ $(CLEANFILES)

