toolbus=__TOOLBUS__
datadir=__DATADIR__
srcdir=__SRCDIR__

tests=0
failed=0

call_toolbus () {
  script=${srcdir}/$1
  tests=`expr $tests + 1`
  result=`${toolbus} -I${srcdir}/../src -I${datadir} ${script} 2>&1`
  toolbus_exit=$?
  if [ $toolbus_exit != 0 ]; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  elif echo $result | grep -i -e failed -e warning >/dev/null ; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  else
    printf .
  fi
}

# Test whether equations are available that *should* be available.
call_toolbus reduce-test-1.tb

# Test whether equations are available that *should not* be available.
call_toolbus reduce-test-2.tb

echo ""

if [ $failed != 0 ]; then
        echo "FAILED:" $failed "out of" $tests "tests"
        exit 1
else
  echo "All" $tests "tests succeeded"
fi
