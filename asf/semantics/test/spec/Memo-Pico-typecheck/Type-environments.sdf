module Type-environments

imports languages/pico/syntax/Pico-Identifiers 
imports languages/pico/syntax/Pico-Types

exports
  sorts TENV PAIR
  context-free syntax
    "(" PICO-ID ":" TYPE ")" -> PAIR
    "[" {PAIR ","}* "]"      -> TENV

    PAIR "+" TENV                               -> TENV
    "lookup" "(" PICO-ID "," TENV ")"           -> TYPE {memo}
    "add-to" "(" PICO-ID "," TYPE "," TENV ")"  -> TENV
  variables
    "Pair" [0-9\']*  -> PAIR
    "Pair*" [0-9\']* -> {PAIR ","}*
    "Tenv" [0-9\']*  -> TENV
    "Id"[0-9]* -> PICO-ID
    "Type"[0-9]* -> TYPE
