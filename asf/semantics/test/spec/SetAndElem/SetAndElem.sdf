module SetAndElem

imports Layout

exports

sorts ID BOOL {ID ";"}* ID*

context-free syntax

"true"  -> BOOL
"false" -> BOOL

lexical syntax
[a-z]+  -> ID

lexical restrictions

ID -/- [a-z]

context-free syntax

set({ID ";"}*) -> {ID ";"}*        {cons("sepset")}
set( ID*  )    -> ID*              {cons("set")}

elem(  ID  ,  ID*  ) -> BOOL       {cons("elem")}
elem(  ID  ,  {ID ";"}*  ) -> BOOL {cons("sepelem")}

variables

"Id"[0-9]* -> ID
"Id*"[0-9]* -> ID*
"Sp*"[0-9]* -> {ID ";"}*
