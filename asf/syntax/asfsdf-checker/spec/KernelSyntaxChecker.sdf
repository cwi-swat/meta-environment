module KernelSyntaxChecker

imports AsfSdf-Messages ModuleOperations

exports
  context-free syntax
    check-for-kernel-syntax(Definition) -> Messages

hiddens
  context-free syntax
    check-syntax(Definition, Messages)        -> Messages {traversal(accu, top-down)}
    check-syntax(Module, Messages)            -> Messages {traversal(accu, top-down)}
    check-syntax(Module, Messages, ModuleId)  -> Messages {traversal(accu, top-down)}
    check-syntax(Grammar, Messages, ModuleId) -> Messages {traversal(accu, top-down)}

  context-free syntax
    check-renamings(Definition, Messages)         -> Messages {traversal(accu, top-down)}
    check-renamings(Module, Messages)             -> Messages {traversal(accu, top-down)}
    check-renamings(Module, Messages, ModuleId)   -> Messages {traversal(accu, top-down)}
    check-renamings(Renaming, Messages, ModuleId) -> Messages {traversal(accu, top-down)}

hiddens
  variables
    "Definition"[0-9]* -> Definition
    "Module"[0-9]*     -> Module
    "$ModuleId"[0-9]*  -> ModuleId
    "Msgs"[0-9]*       -> Messages
    "Prod"[0-9]*       -> Production
    "Prod*"[0-9]*      -> Production*
    "Prios"[0-9]*      -> Priorities