# $Id$

ASC_INCLUDES := $(shell ${ASC_INCLUDES_SCRIPT})
ASC_LD_FLAGS := $(shell ${ASC_LD_FLAGS_SCRIPT})


IDEF=$(TOOLBUS)/bin/idef2tif
TIFS=$(TOOLBUS)/bin/tifstoc

tif:
	for i in `ls *.idef`; do \
	  ${IDEF} $$i; \
	  ${TIFS} -tool `basename $$i .idef` `basename $$i .idef`.tifs; \
	done

clean-tif:
	rm -f *.tifs *.tif.[ch]
