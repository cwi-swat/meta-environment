dnl $Id$

dnl Process this file with autoconf to produce a configure script.
AC_INIT
AC_CONFIG_SRCDIR([configure.in])
AM_INIT_AUTOMAKE(meta-doc, 0.1beta)
AC_PREREQ(2.59)

ACLOCAL="${ACLOCAL} -I ."

AC_ARG_WITH(build_manual,
   [  --with-build-manual     Build the manual from its sources ],
   [build_manual=true],)
AC_MSG_CHECKING([whether asf+sdf-user-manual.ps already exists])

if test -f asf+sdf-user-manual.ps; then
   AC_MSG_RESULT(yes);
else
   AC_MSG_RESULT(no);
   build_manual=true
fi
AM_CONDITIONAL(BUILD_MANUAL, test x$build_manual = xtrue)


dnl {{{  Which files need updating?
AC_CONFIG_FILES([Makefile
  guided-tour/Makefile
  user-manual/Makefile
])
AC_OUTPUT

dnl }}}
