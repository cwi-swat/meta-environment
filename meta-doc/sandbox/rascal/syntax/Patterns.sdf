module Patterns

imports Variables Expressions

exports
sorts Pattern PatternChar PatternSymbol

lexical syntax
         "\\$"                                     -> PatternChar
         "\\|"                                     -> PatternChar
         ~[\$\|]                                   -> PatternChar {avoid}

context-free syntax
         "[|" PatternSymbol* "|]"                  -> Pattern
         PatternChar                               -> PatternSymbol {avoid}
         "$" Variable                              -> PatternSymbol
         "$(" VarDecl ")"                          -> PatternSymbol
         "$(" Expression ")"                       -> PatternSymbol
         Pattern                                   -> Expression


