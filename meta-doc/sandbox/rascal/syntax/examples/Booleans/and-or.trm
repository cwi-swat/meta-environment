module Bool-example1
imports Boolean-syntax

fun Bool reduce(Bool B) {
    visit bu B {
      true & <Bool B2>   => B2     %% Style 1: Use Variables
      false & <Bool B2>  => false

      true | true   => true        %% Style 2: Use a truth table
      true | false  => true
      false | true  => true
      false | false => false
    }
}
