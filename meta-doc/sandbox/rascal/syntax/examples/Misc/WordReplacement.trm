module WordReplacement

str capitalize1(str S){
    visit S {
      %% \b matches a word boundary
      %% i turns on case-independent matching
      case /\brascal\b/i => "Rascal"
    }
    return S;
}

str capitalize2(str S, str Pat, str Repl){
    visit S {
      case /\b<Pat>\b/i => Repl
    }
    return S;
}