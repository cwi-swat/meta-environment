module Queens

// n-Queens problem.

void queens(int N){

  for(int column : [1..N]){
     for(int row : [1..N]){
        if(all(int i : [1..column-1] | board[i] != row, 
                                       board[i] != row+column-i, 
                                       board[i] != row+i-column)){
           board[column] = row;
           if(column == N){
	   	     print(board);
	   }
        }
     }
  }
}
