module Names

exports
  sorts Name QualName Reserved
  lexical syntax
    [A-Za-z\_] [A-Za-z0-9\_\-]* -> Name

  lexical restrictions
    Name -/- [a-zA-Z0-9\_\-]
    Reserved -/- [a-zA-Z0-9\_\-]
 
  context-free syntax
    {Name "::"}+  -> QualName {avoid,cons("QualName")}

    Reserved      -> Name {reject}