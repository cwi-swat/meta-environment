tool menu-bar is {  }

process MenuBar is
let
  T : menu-bar,
  Type : term,
  EventList : list,
  Event : term
in
  rec-connect(T?)
  . snd-msg(cm-get-events(studio-menubar))
  . rec-msg(cm-events(EventList?))
  . snd-do(T, add-events(EventList))
  .
  (
      rec-event(T, button-selected(Event?))
      . snd-msg(ui-button-selected(studio-menubar, Event))
      . snd-ack-event(T, button-selected(Event))
    )
    * rec-event(T, quit)
endlet

toolbus(MenuBar)
