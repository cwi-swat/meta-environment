#include "sglr.idef"

process Test is
  /* This assumes there is an erroneous table "ErroneousTable.tbl"
   * in the current directory.
   */
  snd-msg(open-language("ErroneousTable", "./ErroneousTable.tbl")) .
  (
    rec-msg(language-opened("ErroneousTable")) .
    printf("open-table-test-2 FAILED!")
  +
    rec-msg(language-not-opened("ErroneousTable"))
  +
    shutdown("open-table-test-2 FAILED! (timeout)\n") delay(sec(5))
  ) .
  shutdown("") delay(sec(2))

toolbus(Test, Parser)
