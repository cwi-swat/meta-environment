toolbus=__TOOLBUS__
datadir=__DATADIR__
sglr=__SGLR__

PATH=${toolbus}/bin:$PATH; export PATH


tests=0
failed=0

call_toolbus () {
  script=$1
  tests=`expr $tests + 1`
  result=`toolbus -I${datadir} -I${sglr}/share ${script} 2>&1`
  toolbus_exit=$?
  if [ $toolbus_exit != 0 ]; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  elif echo $result | grep -i failed > /dev/null; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  else
    printf .
  fi
}

# Test 1. Try to open eqs file that doesn't exist
rm -f Aap.asf
call_toolbus open-eqs-test.tb
rm -f Aap.asf

# Test 2. Try to open a eqs file that _does_ exist
echo "equations" > Aap.asf
call_toolbus open-eqs-test.tb
rm -f Aap.asf

# Test 3. Try to create a new equations section.
rm -f Empty.asf
call_toolbus new-eqs-test.tb
rm -f Empty.asf

## Test whether ambiguities for asfix1 are corrected
call_toolbus ambi-test.tb

# Test for updating of unchanged modules
call_toolbus update-test-module.tb



echo ""


if [ $failed != 0 ]; then
	echo "FAILED:" $failed "out of" $tests "tests"
	exit 1
else
  echo "All" $tests "tests succeeded"
fi
