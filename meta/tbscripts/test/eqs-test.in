toolbus=__bindir__/toolbus
datadir=__datadir__

#result=`${toolbus} -I${datadir} new-eqs-test.tb 2>&1`
#echo $result

#exit 0

call_toolbus () {
  script=$1
  result=`${toolbus} -I${datadir} ${script} 2>&1`
  if echo $result | grep -iq failed; then
    echo ${result}
    exit 1
  else
    echo -n "."
  fi
}

# Test 1. Try to open eqs file that doesn't exist
