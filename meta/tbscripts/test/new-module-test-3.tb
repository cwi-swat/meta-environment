#include "in-output.idef"
#include "module-db.idef"

#include "../new-module.tb"

process Test is
let
  Module: term,
  Path : str,
  Time : term
in
  %% Read an existing module in baf.
  snd-msg(id("Test"), open-file("Empty")) .
  (
    rec-msg(id("Test"), opened-file(baf, "Empty", Module?, Path?, Time?))
  +
    shutdown("test-3 FAILED! (timeout in read)\n") delay(sec(1))
  ) .

  %% Update the module-db.
  snd-msg(add-sdf2-module-to-db(Path, Module, Time, "unchanged")) .
  (
    rec-msg(need-modules([]))
  +
    shutdown("test-3 FAILED! (timeout in update-db)\n") delay(sec(1))
  ) .

  %% Here comes the actual test.
  snd-msg(create-new-module("Empty")) .
  (
    rec-msg(module-created) .
    printf("new-module-test-3 FAILED!\n")
  +
    rec-msg(module-exists)
  +
    shutdown("test-3 FAILED! (timeout)\n") delay(sec(1))
  )
  .
  shutdown("") delay(sec(2))

endlet

toolbus(Test, Io, ModuleDB, New-module)
