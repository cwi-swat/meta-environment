# $Id$

@SET_MAKE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@

TESTCASES	= toolbus-test module-test parser-test

# CLEANFILES are removed by 'make clean'
CLEANFILES	= ${TESTCASES}

test: ${TESTCASES} ambi-test.tb
	@for testcase in ${TESTCASES}; do \
		echo -n "Running $${testcase}"; \
		./$${testcase}; \
	done

clean:
	@rm -f *.o *~ $(CLEANFILES)

%: %.in
	sed 's#__bindir__#${bindir}#g;s#__datadir__#${datadir}#g' <$< >$@
	chmod +x $@
