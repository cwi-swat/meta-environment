process AddEqSyn(AES: add-eqs-syntax) is
let
  Name      : str,
  NewSyntax : term,
  Syntax    : term
in  
  ( rec-msg(add-eqs-syntax(Name?)).
    snd-msg(get-all-sdf2-definitions(Name)).
    rec-msg(syntax-with-rewrite-function(Syntax?)).
    snd-eval(AES,reduce(Syntax)).
    rec-value(AES,reduct(NewSyntax?)). 
    snd-msg(extended-syntax(NewSyntax))
  )*
  delta
endlet
