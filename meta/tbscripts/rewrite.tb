process Rewrite(Eval: evaluator) is
let
  Id   : term,
  Tid  : int,
  NF   : term,
  Mod  : str,
  Term : term 
in
  Id := process-id. 
  ( 
    rec-msg(rewrite(Mod?,Term?)). 
    snd-msg(retrieve-eqs(Mod)).
    rec-msg(finished-retrieval). 
    snd-eval(Eval, interpret(Mod,Term)).
    rec-value(Eval,result(NF?)).
    snd-msg(result(NF))
  ) * 
  delta
endlet 
