process Open-Sdf2-Language is
let 
  Table : term,
  Message : str
in
  (
    rec-msg(open-language(sdf)) .
    snd-msg(io-read-term-file("__SDF2TABLE__")) .
    (
      rec-msg(io-file-contents(Table?)) .
      snd-msg(table-for-language(trm("Sdf2"), Table))
    +
      rec-msg(io-error-reading(Message?)) .
      snd-msg(open-language-failed)
    )
  )*delta
endlet
