/* $Id$ */

process Open-Sdf2-Language is
let 
  Error: str,
  Table: term,
  Type: term
in
  Type := sdf
  .
  (
    rec-msg(get-parse-table(Type))
    . snd-msg(io-read-term-file("__SDF2TABLE__"))
    .
    (
      rec-msg(io-file-contents(Table?))
      . snd-msg(parse-table(Type, Table))
    +
      rec-msg(io-error-reading(Error?))
      . snd-msg(no-parse-table(Type, Error))
    )
  )
  * delta
endlet
