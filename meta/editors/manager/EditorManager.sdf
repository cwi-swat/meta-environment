module EditorManager

imports basic/NatCon
imports basic/StrCon
imports basic/Whitespace

exports
  sorts TermCon

  sorts Sid
  context-free syntax
    "sid" "(" id:NatCon ")" -> Sid

  sorts EditorType
  context-free syntax
    name:StrCon -> EditorType

  sorts ModuleId
  context-free syntax
    "mid" "(" id:NatCon ")" -> ModuleId 

  sorts SessionStatus
  context-free syntax
    "running" -> SessionStatus {cons("running")}
    "zombie" -> SessionStatus {cons("zombie")}

  sorts Session
  context-free syntax
    "session" "("
      id:Sid ","
      path:StrCon ","
      status:SessionStatus ","
      reference-count:NatCon ","
      "{" {EditorType ","}* "}"
    ")"
    -> Session
