module Booleans

imports Layout

exports
  sorts Bool
  context-free syntax
    "true"             -> Bool 
    "false"            -> Bool
    Bool "|" Bool      -> Bool {left}
    Bool "&" Bool      -> Bool {left}
    "not" "(" Bool ")" -> Bool
    "(" Bool ")"       -> Bool {bracket}
  variables
    "Bool"[0-9]* -> Bool

  context-free priorities
    Bool "&" Bool -> Bool >
    Bool "|" Bool -> Bool
