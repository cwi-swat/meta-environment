module VarDecls

exports
  sorts ID DECL TYPE 

  lexical syntax
    [a-z]+ -> ID
    [\ \n] -> LAYOUT

  context-free restrictions
    LAYOUT? -/- [\ \n]
 
  context-free syntax
    "decl" {ID ","}+ ":" TYPE -> DECL 
    "integer"                 -> TYPE 
    "real"                    -> TYPE 

  variables
    "Id"           -> ID 
    "Type"[0-9]*   -> TYPE 
    "Id-list"[\']* -> {ID ","}* 
    "Id-ne-list"   -> {ID ","}+


