module Value-environments

imports Pico-Identifiers Values
    
exports
  sorts VENV VPAIR
  context-free syntax
    "(" PICO-ID ":" VALUE ")"                   -> VPAIR
    "[" {VPAIR "," }* "]"                       -> VENV
    VPAIR "+" VENV                              -> VENV
    "lookup" "(" PICO-ID "," VENV ")"           -> VALUE
    "update" "(" PICO-ID "," VALUE "," VENV ")" -> VENV
 variables
   "VPair" [0-9]*   -> VPAIR
   "VPair*"[0-9\']* -> {VPAIR ","}*
   "Venv" [0-9\']*  -> VENV
