# For each individual package in the Asf+Sdf Meta-Environment
# distribution that is controlled by automake, run "reconf" for
# that package prior to "configure".

PACKAGES="asfix asc-support evaluator pgen sglr"

for pkg in ${PACKAGES}
do
   echo "package: $pkg"
   cd ${pkg}
   if [ -x ./reconf ]
   then
      ./reconf
   fi
   cd ..
done

aclocal
autoconf
autoheader
automake -a
