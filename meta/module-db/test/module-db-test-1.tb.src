#include <in-output.idef>
#include <module-db.idef>

process Test is
let
  SdfTree  : term,
  EqsText  : str,
  Path     : str,
  Time     : term
in
  snd-msg(process-search-paths("meta.conf", ["__SRCDIR__"])) .
  rec-msg(search-paths-processed("meta.conf")) .
  snd-msg(open-file("Test")) .
  (
    rec-msg(opened-file("Test", tree(SdfTree?), Path?, Time?)) .
    snd-msg(add-sdf2-module-to-db("Test", Path, SdfTree, Time, "unchanged")) .
    rec-msg(need-modules([]))
  +
    shutdown("module-db-test-1a FAILED! (timeout)\n") delay(sec(5))
  ).
  snd-msg(open-asf-file("Test", "./Test.sdf")) .
  (
    rec-msg(opened-file("Test", text(EqsText?), Path?, Time?)) .
    snd-msg(add-eqs-to-db("Test", Path, text(EqsText), Time)) .
    rec-msg(eqs-added)
  +
    shutdown("module-db-test-1b FAILED! (timeout)\n") delay(sec(5))
  ) .
  shutdown("") delay(sec(2))
endlet

toolbus(Test, ModuleDB, Io)
