#include <in-output.idef>
#include <module-db.idef>
#include <asource.idef>
#include <notification.tb>

process Test is
let
  SdfTree  : term,
  EqsText  : str,
  EqsTree  : term,
  Path     : str,
  Time     : term
in
  snd-msg(process-search-paths("meta.conf", ["__BUILDDIR__"])) .
  rec-msg(search-paths-processed("meta.conf")) .
  snd-msg(open-file("Pico-Booleans")) .
  (
    rec-msg(opened-file("Pico-Booleans", tree(SdfTree?), Path?, Time?)) .
    snd-msg(add-sdf2-module-to-db("Pico-Booleans", Path, SdfTree, 
                                  Time, "unchanged")) .
    rec-msg(need-modules([]))
  +
    shutdown("module-db-test-4a FAILED! (timeout)\n") delay(sec(50000))
  ).
  snd-msg(open-asf-file("Pico-Booleans", "__BUILDDIR__/Pico-Booleans.sdf")) .
  (
    rec-msg(opened-file("Pico-Booleans", tree(EqsTree?), Path?, Time?)) .
    snd-msg(unparse(EqsTree)) .
    rec-msg(unparsed-text(EqsText?)) .
    snd-msg(add-eqs-to-db("Pico-Booleans", Path, tree(EqsTree),
                          text(EqsText), Time)) .  
    rec-msg(eqs-added) .
    snd-msg(update-eqs-tree-in-db("Pico-Booleans", tree(EqsTree))) .
    rec-msg(eqs-updated) .
    snd-msg(eqs-available-for-modules("Pico-Booleans")) .
    rec-msg(eqs-for-modules([]))
  +
    shutdown("module-db-test-4b FAILED! (timeout)\n") delay(sec(50000))
  ) .
  shutdown("") delay(sec(2))
endlet

toolbus(Test, ModuleDB, Io, Unparser, Notify-about-changed-modules)
