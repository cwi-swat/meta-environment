# $Id$

@SET_MAKE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@

TESTCASES	= module-db-test

# CLEANFILES are removed by 'make clean'
CLEANFILES	= ${TESTCASES}

test: ${TESTCASES}
	@for testcase in ${TESTCASES}; do \
		echo -n "Running $${testcase}"; \
		./$${testcase}; \
	done

clean:
	@rm -f *.o *~ $(CLEANFILES)

module-db-test: module-db-test.in
	@sed 's#__bindir__#${bindir}#g;s#__datadir__#${datadir}#g' <$< >$@
	@chmod +x $@
