#include "../../in-output/in-output.idef"
#include "../module-db.idef"

/* This test checks whether the equations section in text format
 * can be retrieved in a correct way.
 */

process Test is
let
  SdfTree : term,
  Path    : str,
  Time    : term,
  EqsText : str
in
  snd-msg(open-file("Test")) .
  (
    rec-msg(opened-file("Test", tree(SdfTree?), Path?, Time?)) .
    snd-msg(add-sdf2-module-to-db("Test", Path, SdfTree, Time, "unchanged")) .
    rec-msg(need-modules([]))
  +
    shutdown("module-db-test-2a FAILED! (timeout)\n") delay(sec(5))
  ).
  snd-msg(open-eqs-file("Test")) .
  (
    rec-msg(opened-file("Test", text(EqsText?), Path?, Time?)) .
    snd-msg(add-eqs-to-db("Test", Path, text(EqsText), Time)) .
    rec-msg(eqs-added)
  +
    shutdown("module-db-test-2b FAILED! (timeout)\n") delay(sec(5))
  ) .
  snd-msg(get-eqs-text("Test")) .
  ( rec-msg(eqs-text("Test", EqsText))
  +
    shutdown("module-db-test-2c FAILED! (timeout)\n") delay(sec(5))   
  ) .
  shutdown("") delay(sec(2))
endlet

toolbus(Test, ModuleDB, Io)
