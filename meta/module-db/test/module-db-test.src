#! /bin/sh

# $Id$

datadir=__DATADIR__
asfix=__PT_SUPPORT__
builddir=__TOP_BUILDDIR__/module-db/test
srcdir=__SRCDIR__

toolbus="__TOOLBUS__/bin/toolbus \
           -I__TOP_SRCDIR__/in-output \
           -I__TOP_SRCDIR__/module-db \
           -I__PT_SUPPORT__/share \
           -I__TOP_SRCDIR__/tbscripts"

PATH=${PATH}:__PT_SUPPORT__/bin
PATH=${PATH}:__TOP_BUILDDIR__/in-output
PATH=${PATH}:__TOP_BUILDDIR__/module-db

tests=0
failed=0

(sleep 30 ; kill $$ > /dev/null 2>&1) &

call_toolbus () {
  script=$1
  tests=`expr $tests + 1`
  result=`${toolbus} ${script} 2>&1`
  toolbus_exit=$?
  if [ $toolbus_exit != 0 ]; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  elif echo $result | grep -i failed >/dev/null; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  else
    printf .
  fi
}

# Test 1. Add an equations section as text to the db.
echo "" > ${builddir}/Test.asf
touch ${srcdir}/Test.sdf.baf
call_toolbus module-db-test-1.tb

# Test 2. Add a non-empty equations section as text and try to retrieve
# again.
echo "equations" > ${builddir}/Test.asf
call_toolbus module-db-test-2.tb

# TEMPORARILY DISABLED THESE TESTS!!!!!!!!!!!!!!!
