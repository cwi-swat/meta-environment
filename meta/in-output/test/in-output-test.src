#! /bin/sh

# $Id$

toolbus="__TOOLBUS__/bin/toolbus -I__TOP_SRCDIR__/in-output"
datadir=__DATADIR__
builddir=__TOP_BUILDDIR__/in-output/test

PATH=${PATH}:__TOP_BUILDDIR__/in-output

tests=0
failed=0

call_toolbus () {
  script=$1
  tests=`expr $tests + 1`
  result=`${toolbus} ${script} 2>&1`
  toolbus_exit=$?
  if [ $toolbus_exit != 0 ]; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  elif echo $result | grep -i failed > /dev/null; then
    echo "Failed: " $script ": " ${result}
    failed=`expr $failed + 1`
  else
    printf .
  fi
}    

# Test 1. Check whether a non-existing sdf module exists.
call_toolbus in-output-test-1.tb

# Test 2. Check whether an existing sdf module (in ascii) exists.
call_toolbus in-output-test-2.tb

# Test 3. Check whether an existing sdf module (in baf) exists.
call_toolbus in-output-test-3.tb

# Test 4. Attempt to create an empty sdf module.
rm -f ${builddir}/EmptySdf2Module.sdf
call_toolbus in-output-test-4.tb
rm -f ${builddir}/EmptySdf2Module.sdf

# Test 5. Attempt to create an empty equations section.
rm -f ${builddir}/EmptyEqsSection.asf
call_toolbus in-output-test-5.tb
rm -f ${builddir}/EmptyEqsSection.asf

# Test 6. Attempt to open an existing equations section.
echo "" > ${builddir}/TestEqs.asf
call_toolbus in-output-test-6.tb
rm -f ${builddir}/TestEqs.asf

# Test 7. Attempt to open a non-existing equations section.
call_toolbus in-output-test-7.tb

# Test 8. Attempt to open an existing sdf definition.
echo "module TestSdf" > ${builddir}/TestSdf.sdf
call_toolbus in-output-test-8.tb
rm -f ${builddir}/TestSdf.sdf

# Test 9. Attempt to open a non-existing sdf section.
call_toolbus in-output-test-9.tb

echo ""

if [ $failed != 0 ]; then
        echo "FAILED:" $failed "out of" $tests "tests"
        exit 1
else
  echo "All" $tests "tests succeeded"
fi  
