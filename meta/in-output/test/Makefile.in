@SET_MAKE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@

TESTCASES	= in-output-test

# CLEANFILES are removed by 'make clean'
CLEANFILES	= ${TESTCASES}

test: ${TESTCASES}
	@for testcase in ${TESTCASES}; do \
		printf "Running $${testcase}"; \
		./$${testcase}; \
	done

clean:
	@rm -f *.o *~ $(CLEANFILES)

in-output-test: in-output-test.in
	@sed 's#__bindir__#${bindir}#g;s#__datadir__#${datadir}#g' <$< >$@
	@chmod +x $@
