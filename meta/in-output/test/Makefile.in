# $Id$

@SET_MAKE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@

# CLEANFILES are removed by 'make clean'
CLEANFILES	= in-output-test

test: in-output-test
	./in-output-test

clean:
	rm -f *.o *~ $(CLEANFILES)

in-output-test: in-output-test.in
	sed 's#__bindir__#${bindir}#g;s#__datadir__#${datadir}#g' <$< >$@
	chmod +x $@
