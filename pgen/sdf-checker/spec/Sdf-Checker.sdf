module  Sdf-Checker

imports Sdf-AttributeChecker LabelChecker SortChecker 
        ProductionChecker ConstructorChecker
        RemoveLabels DeprecatedSymbols

exports
  context-free start-symbols Summary

  context-free syntax
    check-sdf(SDF)           -> Summary
    check-sdf(SDF, ModuleId) -> Summary
    check-sdf(Definition)    -> {Feedback ","}*

hiddens
  context-free syntax
    check-sorts-and-prods(Definition)                          -> {Feedback ","}*
    pre-check-module(Module, Definition, Info-Msg-Tuple)       -> Info-Msg-Tuple
    pre-check-modules(Definition, Definition, Info-Msg-Tuple)  -> Info-Msg-Tuple
    pre-check-imports(ImportsSet, Definition, Info-Msg-Tuple)  -> Info-Msg-Tuple
    check-module(Module, Definition, Info-Msg-Tuple)	       -> Info-Msg-Tuple
    check-modules(Definition, Definition, Info-Msg-Tuple)      -> Info-Msg-Tuple
    check-imports(ImportsSet, Definition, Info-Msg-Tuple)      -> Info-Msg-Tuple
    post-check-modules(Definition, ImportsSet, Info-Msg-Tuple) -> Info-Msg-Tuple
    post-check-modules(ImportsSet, Info-Msg-Tuple)             -> Info-Msg-Tuple

hiddens
  variables
    "Definition"[0-9]* -> Definition

    "Msg"[0-9]*        -> Feedback
    "Msg*"[0-9]*       -> {Feedback ","}*
    "Msgs"[0-9]*       -> {Feedback ","}*

    "Module"[0-9]*       -> Module
    "Module*"[0-9]*      -> Module*
    "$ModuleId"[0-9]*    -> ModuleId
    "$ModuleName"[0-9]*  -> ModuleName
    
    "InfoMsgTuple"[0-9]*    -> Info-Msg-Tuple
    "ModuleInfoTable"[0-9]* -> Module-Info-Table

    "Import"[0-9]*          -> Import
    "Import*"[0-9]*         -> Import*
    "ImportsSet"[0-9]*      -> ImportsSet

    "$Symbol*"[0-9]*            -> Symbol*

    "DeclaredSymbolPair*"[0-9]* -> SymbolPair*
    "AliasedSymbolPair*"[0-9]*  -> SymbolPair*
    "UsedSymbolPair*"[0-9]*     -> SymbolPair*

    "$Msgs"[0-9]*           -> {Feedback ","}*

    "$Char*"[0-9]* -> CHAR*

    "$String"[0-9]* -> StrCon
