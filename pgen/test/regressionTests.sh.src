#!/bin/bash

#Expand and print each command to stdout before executing it
#set -x 

version=1
verbose=0
VERBOSE=""
update=0
error=0
testsFailed=0
testsDone=0
cd `dirname $0`;
currentDir=`pwd`
inputFilename=""
inputFilenameSuffix=""
outputFilename=""
orgAsfixFilename=""
orgFilename=""
parseTableFilename=""

MV=mv
RM=rm
SGLR="__SGLR__/bin/sglr"
SDF2TABLE="__TOP_BUILDDIR__/src/sdf2table.test"
ATCOMPARE="__ATERM__/bin/atdiff"
COMPARE="__PT_SUPPORT__/bin/comparePT"
ERRORCOMPARE="__ERROR_SUPPORT__/bin/error-diff"

GRAMMARS="__TOP_BUILDDIR__/test/grammars"
TABLES="__TOP_BUILDDIR__/test/tables"
TERMS="__TOP_BUILDDIR__/test/terms"
ERRORTERMS="__TOP_BUILDDIR__/test/erroneous"

# Usage: displays usage information on stderr
usage () {
  cat << E_O_USAGE >&2
  Usage: regressionTests runs the regression tests for SGLR.
  Options:
      -h              display help information (usage)
      -v              verbose mode
      -U              update outdated ".org" files
      -V              reveal program version (i.e. $version)
      -x              display commands and arguments as they're executed
E_O_USAGE
}

version() {
  echo "regressionTests v$version" >&2
}

# Script's argument interpretation
handleScriptOptions () {
  while getopts ":hvUVx" option
  do
    case $option in
      h ) usage; exit 0;;
      v ) verbose=1
          VERBOSE="-v";;
      U ) update=1;;
      V ) version;;
      x ) set -x;;
      * ) usage; exit 0;;
    esac
  done
  #Reset the OPTIND argument as getopts does not do this automatically
  OPTIND=1
}

warn () {
  echo $* >&2
}

error () {
  if [ $verbose -gt 0 ] ; then
    warn $*
  else
    printf "x"
  fi
  error=1
  testsFailed=$[$testsFailed+1]
}

abort () {
  error $*
  exit 2
}

success () {
  if [ $verbose -gt 0 ] ; then
    warn $*
  else
    printf "."
  fi
}

notify () {
  if [ $verbose -gt 0 ] ; then
    warn $*
  fi
}

handleSDF2TABLEOptions () {
  while getopts ":bhi:lm:no:stvV" option
    do
      case $option in
        b ) ;;
        h ) ;;
        i ) #Remove path
            inputPath=`eval "ls $OPTARG"`
            inputFilename=`basename $inputPath`
            dir=`dirname $inputPath`
            #Get suffix (path kept if present)
            inputFilenameSuffix="`expr "$inputFilename" : '.*\.\([^./]*\)$'`"
            #Remove suffix (path kept if present)
            name="`expr "$inputFilename" : '\(.*\)\.[^./]*$' \| "$inputFilename"`"
            outputFilename=${TMPDIR:-/var/tmp}/$name.tbl.$$
            orgFilename=$TABLES/$name.tbl;;
        l ) ;;
        m ) ;;
        n ) ;;
        o ) parseTableFilename=`basename $OPTARG`;;
        s ) ;;
        t ) ;;
        v ) ;;
        V ) ;;
        * ) echo "SDF2TABLE option $OPTARG not recognised.";;
      esac
    done
  #Reset the OPTIND argument as getopts does not do this automatically
  OPTIND=1
}

handleSGLROptions () {
  while getopts ":2Abdf::hi:lno:p:s:tvV" option
    do
      case $option in
        2 ) ;;
        A ) ;;
        b ) ;;
        d ) ;;
        f ) ;;
        h ) ;;
        i ) #Remove path
            inputPath=`eval "ls $OPTARG"`
            inputFilename=`basename $inputPath`
            dir=`dirname $inputPath`
            #Get suffix (path kept if present)
            inputFilenameSuffix="`expr "$inputFilename" : '.*\.\([^./]*\)$'`"
            #Remove suffix (path kept if present)
            name="`expr "$inputFilename" : '\(.*\)\.[^./]*$' \| "$inputFilename"`"
            outputFilename=${TMPDIR:-/var/tmp}/$name.asfix.$$
            orgAsfixFilename=$dir/$name.asfix2.org;;
        l ) ;;
        n ) ;;
        o ) ;;
        p ) parseTableFilename=`basename $OPTARG`;;
        s ) ;;
        t ) ;;
        v ) ;;
        V ) ;;
        * ) echo "SGLR option $OPTARG not recognised.";;
      esac
    done
  #Reset the OPTIND argument as getopts does not do this automatically
  OPTIND=1
}

runPgenTests () {
  echo ""
  if eval $SDF2TABLE $VERBOSE $1 -o $outputFilename ; then
    if $ATCOMPARE $VERBOSE $outputFilename $orgFilename >/dev/null ; then
      success "SUCCEEDED regression test for grammar $inputFilename"
    else
      error "FAILED regression test for grammar $inputFilename"
      notify "Parse table is different!"
    fi
    if [ $update -eq 0 ] ; then
      if [ $error -eq 0 ] ; then
        ${RM} -f $outputFilename
      fi
    else
      ${MV} $outputFilename $orgFilename
    fi
  else
    error "FAILED regression test for grammar $inputFilename"
    notify "No parse table generated by sdf2table" 
  fi
}

runTermTests () {
  echo "" 
  if eval $SGLR $VERBOSE $1 -o $outputFilename ; then
    if $COMPARE -a $outputFilename $orgAsfixFilename > /dev/null ; then
      success "SUCCEEDED regression test for term $inputFilename"
    else 
      error "FAILED regression test for term $inputFilename"
      notify "Parse forest is different!"
    fi
    if [ $update -eq 0 ] ; then
      if [ $error -eq 0 ] ; then 
        $RM -f $outputFilename
      fi
    else
      ${MV} $outputFilename $orgAsfixFilename
    fi
  else
    error "FAILED regression test for term $inputFilename"
    notify "No parse forest generated by sglr!" 
  fi
}

runErrorTests () {
  echo "" 
  eval $SGLR $VERBOSE $1 -o $outputFilename
  if $ATCOMPARE $VERBOSE $outputFilename $orgAsfixFilename > /dev/null ; then
    success "SUCCEEDED regression test for error term $inputFilename"
  else 
    if $ERRORCOMPARE $outputFilename $orgAsfixFilename > /dev/null ; then
      success "SUCCEEDED regression test for error term $inputFilename"
      if [ $update -eq 0 ] ; then
        $RM -f $outputFilename
      else
        ${MV} $outputFilename $orgAsfixFilename
      fi
    else
      error "FAILED regression test for error term $inputFilename"
      notify "Error message is different!"
    fi
  fi
}




handleScriptOptions $1

while read commandLine 
do
  #Strip comment lines and ignore whitespace
  t=`echo $commandLine | sed -e 's/^#.*$//'`
  if [ "$t" ] ; then 
    tool=`echo $t | cut -d ' ' -f1-1` 
    args=`echo $t | cut -d ' ' -f2-`
    if [ "$tool" == '$SDF2TABLE' ] ; then
      handleSDF2TABLEOptions $args
      runPgenTests "$args"
    else 
      if [ "$tool" == '$SGLR' ] ; then 
        handleSGLROptions $args
        runTermTests "$args"
        testsDone=$[$testsDone+1]
      else 
        echo "Regression test script doesn't recognise tool: $tool!"
      fi
    fi
  fi

done <termsCommandLines

while read commandLine 
do
  #Strip comment lines and ignore whitespace
  t=`echo $commandLine | sed -e 's/^#.*$//'`
  if [ "$t" ] ; then 
    tool=`echo $t | cut -d ' ' -f1-1` 
    args=`echo $t | cut -d ' ' -f2-`
    if [ "$tool" == '$SDF2TABLE' ] ; then
      handleSDF2TABLEOptions $args
      runPgenTests "$args"
    else 
      if [ "$tool" == '$SGLR' ] ; then 
        handleSGLROptions $args
        runErrorTests "$args"
        testsDone=$[$testsDone+1]
      else 
        echo "Regression test script doesn't recognise tool: $tool!"
      fi
    fi
  fi

done <erroneousCommandLines


if [ $verbose -gt 0 ] ; then
  warn "========================"
  warn "$testsFailed/$testsDone actual tests failed"
  warn "========================"
fi

echo ""

exit $error
