equations

  [] init-table[[_G]] = new-table[grammar := _G]
                                [follow := filter-follow[[_G]]]
                                [labels := init-labels[[_G]]]

  [] actions[[_G]](pt, v, gt) =
        filter[[_G]](reductions(pt[labels], pt[follow], R(_G), v, shifts(gt)))


  [default-] filter[[_G]](at) = at

  [default-] filter-follow[[_G]](st) = st

  [default-] filter-follow[[_G]] = filter-follow[[_G]]( follow-table[[_G]])
