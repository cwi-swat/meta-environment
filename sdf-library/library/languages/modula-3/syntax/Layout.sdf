module languages/modula-3/syntax/Layout

imports languages/modula-3/syntax/Pragma

exports

lexical syntax
	[\ \t\n] -> LAYOUT
	[\*] -> CAsterisk
	"(*" CommentContents* "*)" -> Comment
	"(*" | "*)" -> CommentContents {reject}
	Comment -> NestedComment
	Comment -> LAYOUT
aliases
