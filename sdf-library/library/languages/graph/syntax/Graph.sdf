	node(NodeId, AttributeList)			-> Node
	String						-> NodeId
	"[" {Attribute ","}* "]"			-> AttributeList
	
	label(String)					-> Attribute
	shape(Shape)					-> Attribute
	location(Integer,Integer)			-> Attribute
