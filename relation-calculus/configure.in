dnl $Id$

AC_INIT
AC_CONFIG_SRCDIR([configure.in])
GLT_INIT_PACKAGE
AC_PREREQ(2.59)

AM_MAINTAINER_MODE

AC_AIX
AC_PROG_CC
AC_PROG_LIBTOOL

AC_ARG_WITH(cflags,
[  --with-cflags=CFLAGS    standard options of c compiler],
CFLAGS=${withval},
if test "a${GCC}" = "ayes"; then
CFLAGS="-Wall -g -O2"
fi;
)
AC_SUBST(CFLAGS)

AC_PACKAGE_REQUIRE(asc-support, asc-support-config,
[  --with-asc-support=DIR  asc-support is in DIR])

ASC_LD_FLAGS_SCRIPT="${ASC_SUPPORT}/bin/asc-support-config --ldflags"
AC_SUBST(ASC_LD_FLAGS_SCRIPT)
ASC_INCLUDES_SCRIPT="${ASC_SUPPORT}/bin/asc-support-config --includes"
AC_SUBST(ASC_INCLUDES_SCRIPT)

dnl Of course, the latest version of wish is not always called "wish". :-(
dnl If we can't find something called wish 8.3, wish8.2 or wish8.1, we'll
dnl assume that "wish" is at version 8 or higher.

dnl AC_PATH_PROGS(WISH,wish8.3 wish8.2 wish8.1 wish, /usr/local/bin/wish)

AC_CONFIG_FILES(
Makefile
  spec/Makefile
  spec/relation-calculus/Makefile
  tbscripts/Makefile
  util/Makefile
  rscripts/Makefile
dnl  rviz/Makefile
dnl  demo/Makefile
dnl  demo/pico/Makefile
)
AC_OUTPUT

