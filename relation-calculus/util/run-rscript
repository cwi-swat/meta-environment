if test $# -gt 2
then 
     echo "Usage: run-rscript file.rscript [file.rstore]"
     exit
elif test $# -eq 1
then 
	(echo "eval-rscript("
	cat $1
	echo ")"
	echo ""
	) | sglr -p RscriptCalculator.trm.tbl | RscriptCalculator | unparsePT -v
	echo ""
else
	(echo "eval-rscript-with-rstore("
	cat $1
	echo ","
	cat $2
	echo ")"
	echo ""
	) | sglr -p RscriptCalculator.trm.tbl | RscriptCalculator -t -s  | unparsePT -v
fi

