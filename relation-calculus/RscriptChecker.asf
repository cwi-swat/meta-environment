[compat-size1]
	compat-size($Exp, bag[$Etype], $Tenv) = <int, $Tenv>
[compat-size2]
	compat-size($Exp, rel[$Etype1,$Etype2], $Tenv) = <int, $Tenv>
[default-compat-size]
	compat-size($Exp, $Etype, $Tenv) = 
	<undefined, $Tenv + Incompatible argument types $Etype in $Exp>  
 
[check-size]
	$Exp = #  $Exp1,
