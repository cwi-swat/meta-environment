dnl $Id$

AC_INIT(configure.in)
AM_INIT_AUTOMAKE(asf-library,0.2beta)
AC_REVISION($Id$)

dnl Let aclocal use macros in ./config directory
ACLOCAL="${ACLOCAL} -I ./ac-macros"

dnl Package switches.
AC_PACKAGE_REQUIRE(aterm, baffle,
   [  --with-aterm=DIR        ATerm-library is in DIR])
AC_SUBST(ATERM)

AC_PACKAGE_REQUIRE(pt-support, unparsePT,
   [  --with-pt-support=DIR   pt-support is in DIR])
AC_SUBST(PT_SUPPORT)


AC_PROG_CC
AC_PROG_INSTALL

AC_PATH_PROGS(SH, sh)

AC_PROG_RANLIB
AC_PATH_PROG(AR,ar,/usr/bin/ar)

AC_OUTPUT( 
	Makefile 
        ac-macros/Makefile
        templates/Makefile
	lib/Makefile 
	lib/asf/Makefile 
	lib/sdf/Makefile 
	lib/basic/Makefile 
	lib/containers/Makefile 
	lib/aterm/Makefile 
        src/Makefile
)
