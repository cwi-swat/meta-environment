module languages/sdf2/syntax/Priority
imports languages/sdf2/syntax/Kernel
exports
  sorts Associativity Group Priority Priorities
  context-free syntax
    "left"                                -> Associativity
    "right"                               -> Associativity
    "non-assoc"                           -> Associativity
    "assoc"                               -> Associativity
    "bracket"                             -> Attribute
    Associativity                         -> Attribute
    Production                            -> Group
    "{" Productions "}"                   -> Group
    "{" Associativity ":" Productions "}" -> Group
    {Group ">"}+                          -> Priority
    Group Associativity Group             -> Priority
    {Priority  ","}*                      -> Priorities
    "priorities"  Priorities              -> Grammar 
