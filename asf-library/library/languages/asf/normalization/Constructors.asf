[bootstrap-convenience]
	constructors(Tree) = deconstruct(Tree)

[main]	
	constructors(Module) = deconstruct(Module)

equations

%% This function maps lexical constructor syntax back to normal syntax.
%% The resulting tree are ``as if the parser produced them''.

[deconstruct-lexical]
       attrs([_Attr*1, term(lexical-constructor), _Attr*2]) := Attributes,
         Symbols2      := get-cons-args(Symbols),
       Symbols3        := unwrap(Symbols2),
       Symbol2         := unwrap(Symbol),
       Attributes2     := remove-tag(Attributes),

       Args2           := get-cons-args(Args),
       Args3           := reconstruct(Args2)
       ===>
       deconstruct(
       appl(prod(Symbols,cf(parameterized-sort("CHARS",[Symbol])),Attributes),
               Args) Ann) =
       appl(prod(Symbols3,lex(Symbol2),Attributes2), Args3) Ann

[deconstruct-injection]
	deconstruct(
	appl(prod([cf(parameterized-sort("CHARS",[Symbol]))],cf(Symbol),
		no-attrs),
	[Tree]) Ann) = 
	appl(prod([lex(Symbol)],cf(Symbol),no-attrs),[Tree]) Ann

 %% The following is a parse tree of the character notation. There are
 %% two notations, NumChar and ShortChar. All ShortChars have been normalized
 %% to NumChars at this point (using the table in the Characters module).
 %% NumChars look like this for example: \34  for a quote. 
 %%
 %% The goal of this equation is to translate the parse tree of \34 to the
 %% parse tree '34', an actual AsFix representation of the quote. This works
 %% for all 256 ASCII values.
 
 [deconstruct-character-escapes-to-real-chars]
	deconstruct(appl(prod([cf(sort("CHAR"))],cf(parameterized-sort("CHARS",[_Symbol])),_Attributes),[appl(prod([cf(sort("ASF-NumChar"))],cf(sort("CHAR")),attrs([term(cons("numeric"))])),[appl(prod([lex(sort("ASF-NumChar"))],cf(sort("ASF-NumChar")),no-attrs),[appl(prod([char-class([92]),lex(iter(char-class([range(48,57)])))],lex(sort("ASF-NumChar")),attrs([term(cons("digits"))])),[92,appl(list(lex(iter(char-class([range(48,57)])))),Digits) _Ann0]) _Ann1]) _Ann2]) _Ann3]) _Ann4)
= 
	digits(Digits)

%% If the NumChar was reduced from another notation, it will not contain
%% annotations, but the outermost injections  will:

[deconstruct-character-escapes-to-real-chars-without-annos]
	deconstruct(appl(prod([cf(sort("CHAR"))],cf(parameterized-sort("CHARS",[_Symbol])),_Attributes),[appl(prod([cf(sort("ASF-NumChar"))],cf(sort("CHAR")),attrs([term(cons("numeric"))])),[appl(prod([lex(sort("ASF-NumChar"))],cf(sort("ASF-NumChar")),no-attrs),[appl(prod([char-class([92]),lex(iter(char-class([range(48,57)])))],lex(sort("ASF-NumChar")),attrs([term(cons("digits"))])),[92,appl(list(lex(iter(char-class([range(48,57)])))),Digits)])])]) _Ann3 ]) _Ann4)
= 
	digits(Digits)

[deconstruct-CHAR-variable-to-lexical-variable]
	deconstruct(appl(prod([cf(sort("CHAR"))],cf(parameterized-sort("CHARS",[Symbol])),no-attrs),[appl(prod([varsym(cf(sort("CHAR")))],cf(sort("CHAR")),no-attrs),[appl(prod(Symbols,varsym(cf(sort("CHAR"))),Attributes),Args) Ann1]) Ann2]) _Ann3)
=
	appl(prod([varsym(lex(Symbol))],lex(Symbol),no-attrs),[appl(prod(Symbols,varsym(lex(Symbol)),Attributes),Args) Ann1]) Ann2

equations

[list-reconstruction]
       Symbol2 := unwrap(Symbol),
       Args2 := remove-layout(Args)
       ===>
       reconstruct(appl(list(Symbol),Args) Ann) = appl(list(Symbol2),Args2) Ann

[prod-reconstruction]
       Symbols2 := remove-layout(Symbols),
       Symbols3 := unwrap(Symbols2),
       Symbol2 := unwrap(Symbol),
       Args2 := remove-layout(Args)
       ===>
       reconstruct(appl(prod(Symbols,Symbol,Attributes),Args) Ann) =
       appl(prod(Symbols3,Symbol2,Attributes), Args2) Ann

