[found-layout-constructor]
	is-lexical-constructor(Tree) == true
	===>
	find-layout(Tree, [Tree*]) = [Tree*, Tree]

[found-layout-variable]
	is-layout-variable(Tree) == true
	===>
	find-layout(Tree, [Tree*]) = [Tree*, layout-to-list-variable(Tree)]

