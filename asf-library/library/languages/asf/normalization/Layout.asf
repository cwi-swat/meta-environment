[replace-with-constructors]
	is-layout(Tree) == true,
	[Tree+] := find-layout(Tree, [])
	===>
	match-layout(Tree, Int) = <make-layout([Tree+]), Int>

[replace-without-constructors]
	is-layout(Tree) == true,
	[] == find-layout(Tree, [])
	===>
	match-layout(Tree, Int) = <variable-layout(Int), Int + 1>

