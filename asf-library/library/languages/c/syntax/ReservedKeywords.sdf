module languages/c/syntax/ReservedKeywords

imports languages/c/syntax/Identifiers
exports
  context-free syntax
    "auto"      |
    "break"     |
    "case"      |
    "char"      |
    "const"     |
    "continue"  |
    "default"   |
    "do"        |
    "double"    |
    "else"      |
    "enum"      |
    "extern"    |
    "float"     |
    "for"       |
    "goto"      |
    "if"        |
    "int"       |
    "long"      |
    "register"  |
    "return"    |
    "short"     |
    "signed"    |
    "sizeof"    |
    "static"    |
    "struct"    |
    "switch"    |
    "typedef"   |
    "union"     |
    "unsigned"  |
    "void"      |
    "volatile"  |
    "while"    -> Identifier {reject}

lexical restrictions

   "&" -/- [\&] %% a && b should not be a &(&b)
   "+" -/- [\+] %% (a ++ b) is illegal and ++b should not be +(+b)
   "-" -/- [\-] %% --b should not be -(-b)
