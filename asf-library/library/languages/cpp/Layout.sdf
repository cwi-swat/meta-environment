module languages/cpp/Layout

exports
  lexical syntax
    [\t\ ]	-> LAYOUT

    "/*" ( ~[\*] | Asterisk )* "*/" -> Comment



    %% The avoid has the effect that any comments that
    %% can be parsed as Stuff, will.

    Comment -> LAYOUT {prefer}

    [\*] -> Asterisk
    "//" ~[\n]* [\n] -> Comment

  lexical restrictions
    Asterisk -/- [\/]

  context-free restrictions
    LAYOUT? -/- [\t\ ]
