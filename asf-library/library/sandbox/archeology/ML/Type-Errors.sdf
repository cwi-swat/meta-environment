module Type-Errors
%%
%%
%%      Type-Errors
%%
%%

   imports Mini-ML-Expressions

   exports
      sorts ERROR ERRORS
      context-free syntax
         unbound identifier ID                 -> ERROR
         incorrect application EXP             -> ERROR
         incorrect recursive declaration of ID -> ERROR
	 incorrect test EXP                    -> ERROR
         incompatible then EXP else EXP        -> ERROR
         "[" {ERROR ","}* "]"                  -> ERRORS
      
