module Input
%%  Input

imports DataStacks

exports
  context-free syntax
    read-value ( TYPE )                         -> VALUE

hiddens
  sorts
    INPUT TF
  context-free syntax
    "T"                                         -> TF
    "F"                                         -> TF

    tf2bool ( TF )                              -> BOOL-CONST

    "Please enter an INTEGER:" INT-CONST        -> INPUT
    "Please enter a REAL:" REAL-CONST           -> INPUT
    "Please enter T or F:" TF                   -> INPUT

    "LISP" LISP                                 -> TF
    "TF" LISP                                   -> TF
    "<<" TF ">>"                                -> LISP
