module Integers
imports Layout

exports
  sorts NatCon Nat Int Real

  lexical syntax
    [0-9]+         -> NatCon

  context-free syntax
    NatCon         -> Nat {cons("natCon")}
    Int "." NatCon -> Real {cons("real")}
    "(" Nat ")"    -> Nat {bracket}
    Nat            -> Int {cons("natInt")}
    "+" Nat        -> Int {cons("posInt")}
    "-" Nat        -> Int {cons("negInt")}
    "(" Int ")"    -> Int {bracket}

