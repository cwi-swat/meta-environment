equations

  [cvt-1] convert($String1, <$Area, $String2>) = 
            listitem($String1 || $String2, [ "ShowSource" ], $Area)

  [cvtl-1] convertl({$Tuple*}) = list([$ListItem*])
           ===>
           convertl({<$String1,<$Area, $String2>>, $Tuple*}) = 
             list([convert($String1, <$Area, $String2>),
$ListItem*])

  [cvtl-2] convertl({}) = list([])