module ProcessDef

imports ProcessExpr

exports
  sorts ProcessDef ProcessDefs ProcessSignature

  context-free syntax
    ProcessName                        -> ProcessSignature
    ProcessName "(" {VarDecl ","}* ")" -> ProcessSignature

  context-free syntax
    "process" ProcessSignature "is" ProcessExpr -> ProcessDef {cons("procDef")}

  context-free syntax
    ProcessDef*  -> ProcessDefs {cons("procDefStar")}

