module ProcessDef
imports ProcessExpr

exports
  sorts ProcessDef ProcessDefs

  context-free syntax
    "process" ProcessName "is" ProcessExpr                        -> ProcessDef {cons("procDef")}
    "process" ProcessName "(" {VarDecl ","}* ")" "is" ProcessExpr -> ProcessDef {cons("procDefArgs")}
    ProcessDef*                                                   -> ProcessDefs {cons("procDefStar")}

