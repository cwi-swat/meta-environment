module basic/Locations

imports basic/Strings
imports basic/Integers

exports

sorts Location Area
 
context-free syntax

"location" "(" filename:StrCon "," Area ")" -> Location {cons("location")}
"no-location"                               -> Location {cons("no-location")}

"area" "(" begin-line:NatCon    "," 
           begin-column:NatCon  ","
           end-line:NatCon      ","
           end-column:NatCon    
       ")" -> Area {cons("area")}

"no-area" -> Area {cons("no-area")}
