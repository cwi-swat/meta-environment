module basic/Locations

imports basic/Strings
imports basic/Integers

exports

sorts Location Area
 
context-free syntax

"location" "(" filename:String "," Area ")" -> Location {cons("location")}

"area" "(" start-line:NatCon    "," 
           start-column:NatCon  ","
           end-line:NatCon      ","
           end-column:NatCon    ","
           start-offset:NatCon  "," 
           end-offset:NatCon
       ")" -> Area {cons("area")}

"no-area" -> Area {cons("no-area")}
