#ifndef __MODULE_MANAGER_IDEF
#define __MODULE_MANAGER_IDEF

tool module-manager is { 
  command = "module-manager"
}

process ModuleManager is
let
  MM : module-manager,
  Namespace : term,
  Id : term
in
  execute(module-manager, MM?)
  .
  (
    rec-msg(mm-create-module(Namespace?, Id?))
    . snd-do(MM, create-module(Namespace, Id))
  +
    rec-msg(mm-delete-module(Namespace?, Id?))
    . snd-do(MM, delete-module(Namespace, Id))
  )
  *
  delta
endlet

toolbus(ModuleManager)

#endif
