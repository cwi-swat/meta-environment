module Text
%%
%% A text is simply a list of strings, where each string denotes
%% a line on a display. We will use \var{T} as variable for texts.
%%\smallskip

imports basic/Comments
        basic/Strings
        NewLine

exports
  sorts Text
  context-free syntax
      Bytes            -> Text
      Bytes "||" Bytes -> Bytes {left}
      "(" Bytes ")"    -> Bytes {bracket}

hiddens
    variables
      "Char*"[0-9]*  -> CHAR*
