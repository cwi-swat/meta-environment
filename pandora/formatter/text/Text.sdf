module Text

imports basic/Comments
imports Outstrings
imports NewLine

exports
  sorts Text

  context-free syntax
    Bytes* -> Text {constructor}

  context-free syntax
    concat-reverse(Text) -> Bytes

hiddens
  context-free syntax
    concat-reverse(Text,Bytes) -> Bytes

  variables
    "bytes"[0-9]* -> Bytes
    "bytes*"[0-9]* -> Bytes*
    "text"[0-9]* -> Text
 
  lexical variables
    "byte*"[0-9]* -> Byte*
