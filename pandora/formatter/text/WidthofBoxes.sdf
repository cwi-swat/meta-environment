module WidthofBoxes

imports Outstrings 
imports LengthofBoxes
imports Conditionals[Integer]

exports
  context-free syntax
    "width" "of" Box* "with" Frame -> Integer

hiddens
  variables
    "String"[0-9]* -> Bytes
    [B-E][0-9]* -> Box
    [B-E]"+"[0-9]* -> Box+
    [B-E]"*"[0-9]* -> Box*
    "Frame"[0-9]* -> Frame
    "Int"[0-9]* -> Integer
    "Hs"[0-9]* -> Integer
    "so*"[0-9]* -> SpaceOption*
